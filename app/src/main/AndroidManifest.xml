<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.macrohard.cooklit">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".model.activities.MyKitchenActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".model.activities.BucketListActivity" />
        <activity android:name=".model.activities.AddItemActivity" />
        <activity android:name=".model.activities.RecipeResultListActivity" />
        <activity android:name=".model.activities.RecipeActivity" />
        <activity android:name=".model.activities.RecipeDetailActivity" />
        <activity android:name=".model.activities.MealPlanActivity" />
        <activity android:name=".model.activities.NutritionActivity"></activity>
    </application>

</manifest>